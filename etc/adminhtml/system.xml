    <system>
        <tab id="inxmail" translate="label" sortOrder="1000">
            <label>Inxmail</label>
        </tab>
        <section id="inxmail" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="40">
            <class>separator-top</class>
            <label>Configuration</label>
            <tab>inxmail</tab>
            <resource>Flagbit_Inxmail::inxmail_config</resource>
            <group id="general" translate="label" type="text" showInDefault="1" showInWebsite="0" showInStore="0" sortOrder="90">
                <label>General</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="api_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>API Url</label>
                    <comment/>
                </field>
                <field id="api_user" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>API User</label>
                    <comment/>
                </field>
                <field id="api_password" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>API Password</label>
                    <comment>API Password</comment>
                </field>
                <field id="api_listid" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Inxmail List</label>
                    <comment>Select your Inxmail list</comment>
                </field>
                <field id="version" translate="label" type="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Current Version</label>
                    <frontend_model>Flagbit\Inxmail\Block\Adminhtml\System\Config\ModuleVersion</frontend_model>
                    <backend_model>Flagbit\Inxmail\Model\Config\Backend\Version</backend_model>
                </field>
            </group>
        </section>
    </system>
</config>
